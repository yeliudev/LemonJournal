.editor-container {
  height: 100vh;
}

.journal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
}

.journal {
  position: relative;
  width: 750rpx;
  height: 1112rpx;
  text-align: center;
  overflow: hidden;
}

.background {
  width: 100%;
  height: 100%;
  z-index: 0;
}

.tab-bar {
  background-color: #f4f4f4;
  position: absolute;
  bottom: 0;
  width: 570rpx;
  height: 105rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  z-index: 19990125;
}

.selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10rpx 40rpx;
}

.tab-bar-icon {
  position: absolute;
  top: 11rpx;
  width: 60rpx;
  height: 60rpx;
}

.tab-bar-title {
  position: absolute;
  top: 73rpx;
  font-size: 21rpx;
  color: #727177;
}

.submit {
  background-color: #59c8b1;
  position: absolute;
  bottom: 0;
  left: 570rpx;
  width: 180rpx;
  height: 105rpx;
  z-index: 19990125;
}

.submit:active {
  background-color: #449c8b;
}

.submit-text {
  position: absolute;
  top: 31rpx;
  left: 45rpx;
  font-size: 30rpx;
  color: white;
}

.forward {
  position: absolute;
  top: 27rpx;
  left: 108rpx;
  width: 50rpx;
  height: 50rpx;
}

.background-rich-tab-bar, .sticker-rich-tab-bar {
  background-color: #f4f4f4;
  position: absolute;
  bottom: 0;
  width: 750rpx;
  height: 310rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  z-index: 19980119;
}

.background-scroll-view, .sticker-type-scroll-view {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  color: #808085;
}

.sticker-type {
  display: inline-block;
  margin: 18rpx 42rpx 10rpx;
  font-size: 33rpx;
}

.background-scroll-view, .sticker-scroll-view {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  color: #727177;
}

.background-icon {
  width: 100rpx;
  height: 148rpx;
  margin: 30rpx 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 8rpx #828183;
}

.sticker {
  width: 110rpx;
  height: 110rpx;
  margin: 8rpx 15rpx 0;
}

@keyframes rich-tab-bar-open {
  from {
    bottom: -305rpx;
  }

  to {
    bottom: 0;
  }
}

@keyframes rich-tab-bar-close {
  from {
    bottom: 0;
  }

  to {
    bottom: -305rpx;
  }
}
